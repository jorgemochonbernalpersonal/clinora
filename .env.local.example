# ============================================
# MediPro365 / Clinora - ConfiguraciÃ³n Local
# ============================================
# Copia este archivo a .env.local y ajusta los valores segÃºn tu entorno
# Este archivo estÃ¡ optimizado para desarrollo local

# ============================================
# APLICACIÃ“N
# ============================================
APP_NAME="Clinora"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# BASE DE DATOS
# ============================================
# MySQL (Recomendado segÃºn arquitectura)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=clinora
DB_USERNAME=root
DB_PASSWORD=

# SQLite (Alternativa para desarrollo rÃ¡pido)
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# ============================================
# SESIONES
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# BROADCASTING / WEBSOCKETS
# ============================================
# Para desarrollo local con Soketi
BROADCAST_CONNECTION=pusher
BROADCAST_DRIVER=pusher

PUSHER_APP_ID=app-id
PUSHER_APP_KEY=app-key
PUSHER_APP_SECRET=app-secret
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# Alternativa: usar log para desarrollo sin WebSockets
# BROADCAST_CONNECTION=log

# ============================================
# CACHE Y QUEUES
# ============================================
# Redis (Recomendado segÃºn arquitectura)
CACHE_STORE=redis
CACHE_PREFIX=clinora_cache

QUEUE_CONNECTION=redis
REDIS_QUEUE=default
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE_RETRY_AFTER=90

# Alternativa: usar database para desarrollo sin Redis
# CACHE_STORE=database
# QUEUE_CONNECTION=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=local

# ============================================
# MAIL
# ============================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@clinora.local"
MAIL_FROM_NAME=""

# Para desarrollo: usar log en lugar de SMTP
# MAIL_MAILER=log

# ============================================
# LARAVEL SANCTUM
# ============================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000
SANCTUM_GUARD=web

# ============================================
# LARAVEL HORIZON
# ============================================
# Horizon estÃ¡ configurado automÃ¡ticamente
# En Windows, usar: php artisan queue:work
# En Linux/Mac: php artisan horizon

# ============================================
# LARAVEL TELESCOPE
# ============================================
TELESCOPE_ENABLED=true

# ============================================
# SENTRY (Error Tracking)
# ============================================
# ObtÃ©n tu DSN en https://sentry.io
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# ============================================
# AWS (Opcional - Para almacenamiento S3)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# VITE / FRONTEND
# ============================================
VITE_APP_NAME=""

# ============================================
# CONFIGURACIONES ESPECÃFICAS DEL PROYECTO
# ============================================

# Zona horaria por defecto
APP_TIMEZONE=Europe/Madrid

# Moneda por defecto
APP_CURRENCY=EUR

# Idioma por defecto
APP_DEFAULT_LANGUAGE=es

# ConfiguraciÃ³n de facturaciÃ³n
INVOICE_DEFAULT_TAX_RATE=21.00
INVOICE_DEFAULT_SERIES=A

# ConfiguraciÃ³n de teleconsulta
TELECONSULTATION_DEFAULT_DURATION=60
TELECONSULTATION_ENABLED=true

# ConfiguraciÃ³n de mÃ³dulos
MODULE_PSYCHOLOGY_ENABLED=true

# ============================================
# MEMCACHED (Opcional)
# ============================================
MEMCACHED_HOST=127.0.0.1
