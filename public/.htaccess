####################################
# Protección de Archivos Sensibles
####################################
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger TODOS los archivos que empiecen con .env
# Esto incluye: .env, .env.local, .env.production, .env.backup, etc.
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger directorios sensibles
# Proteger directorios sensibles
RedirectMatch 403 ^/\.git
RedirectMatch 403 ^/vendor
RedirectMatch 403 ^/storage/logs
RedirectMatch 403 ^/config
RedirectMatch 403 ^/database
RedirectMatch 403 ^/app
RedirectMatch 403 ^/bootstrap
RedirectMatch 403 ^/routes

####################################
# Security Headers - Máxima Seguridad para Datos Médicos
####################################
<IfModule mod_headers.c>
    # Prevenir clickjacking - No permitir que el sitio se cargue en iframes externos
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevenir MIME type sniffing - Forzar al navegador a respetar el Content-Type
    Header always set X-Content-Type-Options "nosniff"

    # XSS Protection - Activar protección contra Cross-Site Scripting
    Header always set X-XSS-Protection "1; mode=block"

    # HSTS - Forzar HTTPS (ACTIVADO para producción)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Referrer Policy - Controlar qué información se envía en el header Referer
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy - Desactivar funcionalidades no necesarias para aplicación médica
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=()"

    # Content Security Policy - Estricto para aplicación médica
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.bunny.net; font-src 'self' data: https://fonts.gstatic.com https://fonts.bunny.net; img-src 'self' data: https:; connect-src 'self' https: https://www.google-analytics.com https://www.googletagmanager.com; frame-src 'self' https://www.googletagmanager.com; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
</IfModule>

####################################
# Laravel Rewrite Rules
####################################
<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Forzar HTTPS en producción (ACTIVADO)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

####################################
# Cache Control - Sin Cache para Datos Sensibles
####################################
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes - 1 año
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS y JavaScript - 1 mes
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fuentes - 1 año
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML - Sin cache (CRÍTICO para datos médicos sensibles)
    ExpiresByType text/html "access plus 0 seconds"
    
    # JSON y API responses - Sin cache (datos de pacientes)
    ExpiresByType application/json "access plus 0 seconds"
    
    # XML - Sin cache
    ExpiresByType application/xml "access plus 0 seconds"
    ExpiresByType text/xml "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
    # Cache-Control para assets estáticos
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|css|js|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Sin cache para HTML, JSON y XML (datos sensibles de pacientes)
    <FilesMatch "\.(html|htm|json|xml)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

####################################
# Compresión GZIP - Optimización de Transferencia
####################################
<IfModule mod_deflate.c>
    # Comprimir HTML, CSS, JavaScript, Text, XML y fuentes
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    
    # Excluir imágenes ya comprimidas
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip
    
    # Nivel de compresión (1-9, 6 es un buen balance)
    DeflateCompressionLevel 6
</IfModule>

####################################
# Protección Adicional para Rutas Médicas Sensibles
####################################
<IfModule mod_headers.c>
    # Prevenir almacenamiento en cache de páginas con datos sensibles de pacientes
    <LocationMatch "/(api|admin|dashboard|patient|appointments|clinical-notes|contacts|users|profile|auth)">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
        Header set X-Content-Type-Options "nosniff"
    </LocationMatch>
    
    # Protección adicional para rutas de API
    <LocationMatch "^/api/">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
        Header set X-Content-Type-Options "nosniff"
        Header set Access-Control-Allow-Origin "https://clinora.es"
        Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    </LocationMatch>
</IfModule>

####################################
# Protección contra enumeración de directorios
####################################
Options -Indexes

# Bloquear acceso a archivos de configuración
<FilesMatch "\.(env|log|ini|conf|config|bak|backup|old|orig|save|swp|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>